{
  "name": "ng-di-graph",
  "version": "0.1.0",
  "description": "Angular DI dependency graph CLI tool",
  "main": "dist/index.js",
  "bin": {
    "ng-di-graph": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bun": "bun build src/cli/index.ts --outdir dist --target node --minify --sourcemap && mkdir -p dist/cli && mv dist/index.js dist/cli/index.js && mv dist/index.js.map dist/cli/index.js.map 2>/dev/null || true",
    "test": "vitest run",
    "test:bun": "bun test",
    "test:watch": "vitest",
    "test:watch:bun": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:bun": "bun x tsc --noEmit",
    "dev": "ts-node src/cli/index.ts",
    "dev:bun": "bun src/cli/index.ts",
    "clean": "rimraf dist",
    "install:bun": "bun install"
  },
  "keywords": [
    "angular",
    "dependency-injection",
    "typescript",
    "cli",
    "graph"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "ts-morph": "^21.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
